# Pi Camera Service Configuration
# Camera Module 3 Wide NoIR - Optimized Settings

# ========== Video Configuration ==========
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
CAMERA_FRAMERATE=30
CAMERA_BITRATE=8000000

# ========== Streaming Configuration ==========
CAMERA_RTSP_URL=rtsp://127.0.0.1:8554/cam

# ========== Camera Control Defaults ==========
CAMERA_ENABLE_AWB=true
CAMERA_DEFAULT_AUTO_EXPOSURE=true

# ========== Camera Hardware Configuration (v2.0) ==========
# Camera Module 3 Wide NoIR
CAMERA_CAMERA_MODEL=imx708
CAMERA_IS_NOIR=true

# Tuning file will be auto-detected based on camera_model and is_noir
# Expected path (Pi 4/Zero 2W): /usr/share/libcamera/ipa/rpi/vc4/imx708_noir.json
# Expected path (Pi 5): /usr/share/libcamera/ipa/rpi/pisp/imx708_noir.json

# ========== API Server Configuration ==========
CAMERA_HOST=0.0.0.0
CAMERA_PORT=8000

# ========== Security ==========
# Uncomment and set to enable API key authentication
# CAMERA_API_KEY=your-secret-key-here

# ========== Logging ==========
CAMERA_LOG_LEVEL=INFO
